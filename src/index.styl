
::selection
  background: red

html
  height: 100%

body
  height: 100%
  margin: 0

h1
h2
h3
h4
h5
h6
p
  margin: 0

ul
  margin: 0
  padding: 0
  list-style-type: none

a
  outline: none
  text-decoration: none
  color: blue

button
  border: none
  outline: none
  padding: 0
  margin: 0
  appearance: none
  white-space: nowrap

  &::-moz-focus-inner
    border: 0

*
  -webkit-tap-highlight-color: transparent
